<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="20" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hal.amorce_projet_gd.RegisterController">
    <ImageView fitHeight="251.0" fitWidth="387.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../image.jpg" />
        </image></ImageView>

    <VBox alignment="CENTER" prefHeight="159.0" prefWidth="204.0" spacing="20">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        <TextField fx:id="usernameField" maxWidth="200" promptText="Username" />
        <PasswordField fx:id="passwordField" maxWidth="200" promptText="Password" />
        <Button onAction="#handleRegister" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Register" />
        <Label fx:id="registrationMessageLabel" />
        <Button onAction="#switchToLogin" style="-fx-background-color: #FFFFFF; -fx-text-fill: #4CAF50;" text="Back to Login" />
    </VBox>
</HBox>
